doctype html
html(lang="en")
  head
    link(rel="stylesheet", href="/css/login.css")
  body
    .container
      .login-form
        block content
          h1 Registration
            if errorMessage
              p.error #{errorMessage}
          form(action="/register", method="post", onsubmit="return validatePassword();")
            .form-group
              label(for="username") New Username
              input(type="text", id="username", name="username", placeholder="Enter a new username")
            .form-group
              label(for="password") Password
              input(type="password", id="password", name="password", placeholder="Enter your password")
            .form-group
              label(for="passwordConfirm") Confirm Password
              input(type="password", id="passwordConfirm", name="passwordConfirm", placeholder="Confirm your password")

            
            .register-button-spacing
              button.login-button(type="submit") Register new User

        script.
          function validatePassword() {
            var username=document.getElementById("username").value
            var password = document.getElementById("password").value;
            var confirmPassword = document.getElementById("passwordConfirm").value;

            if (password===""|| confirmPassword === "" || username===""){
               alert("One or more fields are empty. Please try again!");
               return false
            }

            if (password !== confirmPassword) {
              alert("Passwords do not match. Please try again.");
              return false; 
            }
            return true;
          }
       
        .button-spacing
          button.back-button(type="button", onclick="window.location='/users';") Previous Page 

